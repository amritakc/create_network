<a href ='/users'>Users</a>

<h1>Hi <%= @user.name %></h1>

<h3>Here is your profile description:</h3>
<%= @user.description %>

<h3>Your Professional Network</h3>
<% @friends_t.each do |f| %>
	<a href= '/users/<%=f.friend.id%>'><%= f.friend.name %></a><br>
<% end %>
<h3>Invitiations</h3>
<p>The following people asked you to be their network:</p>

<% if @friends_p %>
<table>
	<tr>		
	    <th>Name</th>
	    <th>Action</th>
  	</tr>

<% @friends_p.each do |x| %>
	<tr>
		<td><a href = '/users/<%= x.user.id %>'> <%= x.user.name %></a></td>
		<td>
			<form action ='/accept/<%= x.user.id %>' method = 'post'>
				<input name ="authenticity_token" value ="<%= form_authenticity_token%>" type="hidden">
				<input type = 'submit' value = 'Accept Invitation'>
			</form>
			<form action = "/destroy/<%= x.user.id %>" method = 'post'>
 				<input name= "authenticity_token" value = "<% form_authenticity_token %>" type = "hidden">
 				<input type = "submit" value = "Ignore">
 			</form>
 		</td>
	</tr>
<% end %>

</table> 
<% end %>

